<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- All items should be allowed anywhere in the xml as long as the hierarchy
     is preserved -->
<gzproject>
   <login>
    <username></username>
    <password></password>
    <server>https://www.globalyzer.com/gzserver</server>
    <use-local-rulesets>false</use-local-rulesets>
    <optional>
      <proxy-user></proxy-user>
      <proxy-password></proxy-password>
      <proxy-host></proxy-host>
      <proxy-port></proxy-port>
    </optional>
  </login>
  <project-path>/var/lib/jenkins/jobs/Lingoport.Lite/workspace</project-path>
  <project-name>Lingoport.Lite</project-name>

  <report-path>/home/jenkins/Lingoport_Data/Dashboard/Projects/Lingoport.Lite/GlobalyzerScans</report-path>
  <report-type>ScanDetailedXML</report-type>

  <scans>
    <scan>
      <!-- create and execute a single scan with this info -->
      <scan-name>Java</scan-name>
      <ruleset-name>Java Rule Set</ruleset-name>
      <ruleset-owner>i18n@didi.com</ruleset-owner>
      <!-- Scans all files by default. Uncomment the following 
           to scan only specific directories and files -->
      <!--
      <scan-items>
        <item>src/com/lingoport/demo/java/utils/</item>
        <item>src/com/lingoport/demo/java/ExampleMain.java</item>
        <item>src/com/lingoport/demo/java/ExamplePanel.java</item>
      </scan-items>
      -->
    </scan>
  </scans>
</gzproject>
